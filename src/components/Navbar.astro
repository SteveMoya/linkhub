---
import Logo from "./Logo.astro"
import ToggleTheme from "./ToggleTheme"

import { getSession } from 'auth-astro/server';
import { SignOut, Auth, SignIn } from 'auth-astro/components'

const session = await getSession(Astro.request)!
const username = session?.user?.name
const userimage = session?.user?.image

---
<nav class="container mx-auto flex justify-between p-4">
  <a href="/" class="flex gap-2 items-center justify-center hover:underline underline-offset-4">
	<Logo class="w-5 mt-1" />
		<span>LinkHub</span>
  </a>
  <div class="flex gap-3">
		<a href="/bookmarks" class="flex items-center gap-1 hover:underline underline-offset-4" title="Recursos guardados">
			<svg
				width="1.2em" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M5 6.2c0-1.12 0-1.68.218-2.108a2 2 0 0 1 .874-.874C6.52 3 7.08 3 8.2 3h7.6c1.12 0 1.68 0 2.108.218a2 2 0 0 1 .874.874C19 4.52 19 5.08 19 6.2V21l-7-5-7 5V6.2Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
			</svg>
			<span class="hidden sm:inline-block">Bookmarks</span>
		</a>
		<a href="/all" class="flex items-center gap-1 hover:underline underline-offset-4" title="Todos los recursos">
				<svg width="1.35em" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
					<path d="M22.707 9.293a1 1 0 0 0-1.023-.242l-9 3a1.001 1.001 0 0 0-.633.633l-3 9a1 1 0 0 0 1.265 1.265l9-3a1.001 1.001 0 0 0 .633-.633l3-9a1 1 0 0 0-.242-1.023ZM11.581 20.42l2.21-6.628 4.419 4.419Z"/>
					<path d="M16 30a14 14 0 1 1 14-14 14.016 14.016 0 0 1-14 14Zm0-26a12 12 0 1 0 12 12A12.014 12.014 0 0 0 16 4Z"/>
					<path data-name="&lt;Transparent Rectangle&gt;" style="fill:none" d="M0 0h32v32H0z"/>
				</svg>
				<span class="hidden sm:inline-block">Explorar</span>
		</a>
		<ToggleTheme client:only/>

		<div>
			<Auth>
				{
					session ? (
						<div class="flex items-center gap-1">
							<img src={userimage} alt="user" class="w-6 h-6 rounded-full" />
							<span class="hidden sm:inline-block">{username}</span>
							<SignOut class="flex flex-row items-center gap-1 hover:underline underline-offset-4" title="Logout">
							 <svg style="scale: -1;" width="1.35em" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M13 12h8M16 15l-2.913-2.913v0a.123.123 0 0 1 0-.174v0L16 9"/><path d="M16 5v-.5 0A1.5 1.5 0 0 0 14.5 3H5a2 2 0
							0 0-2 2v14a2 2 0 0 0 2 2h9.5a1.5 1.5 0 0 0 1.5-1.5v0-.5"/></g></svg>
							<span class="hidden sm:inline-block">Logout</span>
							</SignOut>
						</div>
					) : <SignIn provider="github" class="flex items-center gap-x-2 rounded border-[1px] border-[solid] border-neutral-700 px-3 py-1.5 hover:bg-neutral-800 hover:bg-[0] dark:border-neutral-200 dark:hover:bg-neutral-100" title="Login">
						<svg width="1.2em" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M10 0c5.523 0 10 4.59 10 10.253 0 4.529-2.862 8.371-6.833 9.728-.507.101-.687-.219-.687-.492 0-.338.012-1.442.012-2.814 0-.956-.32-1.58-.679-1.898 2.227-.254 4.567-1.121 4.567-5.059 0-1.12-.388-2.034-1.03-2.752.104-.259.447-1.302-.098-2.714 0 0-.838-.275-2.747 1.051A9.396 9.396 0 0 0 10 4.958a9.375 9.375 0 0 0-2.503.345C5.586 3.977 4.746 4.252 4.746 4.252c-.543 1.412-.2 2.455-.097 2.714-.639.718-1.03 1.632-1.03 2.752 0 3.928 2.335 4.808 4.556 5.067-.286.256-.545.708-.635 1.371-.57.262-2.018.715-2.91-.852 0 0-.529-.985-1.533-1.057 0 0-.975-.013-.068.623 0 0 .655.315 1.11 1.5 0 0 .587 1.83 3.369 1.21.005.857.014 1.665.014 1.909 0 .271-.184.588-.683.493C2.865 18.627 0 14.783 0 10.253 0 4.59 4.478 0 10 0" fill="currentColor" fill-rule="evenodd"/></svg>
						<span class="sm:inline-block">Acceder</span>
				</SignIn>
				}	
			</Auth>
		</div>
  </div>
</nav>
