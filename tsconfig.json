{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
	"baseUrl": ".",
	"paths": {
		"@src/*": [
			"src/*"
		],
		"@components/*": [
			"src/components/*"
		],
		"@layouts/*": [
			"src/layouts/*"
		],
		"@interfaces/*": [
			"src/interfaces/*"
		],
		"@utils/*": [
			"src/utils/*"
		],
		"@mocks/*": [
			"src/mocks/*"
		],
		"@data/*": [
			"src/data/*"
		],
		"@hooks/*": [
			"src/hooks/*"
		],
	}
  }
}